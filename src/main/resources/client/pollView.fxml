<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Separator?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Accordion?>
<GridPane xmlns="http://javafx.com/javafx/8"
          id="detailGrid"
          hgap="10"
          vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints/>
    </rowConstraints>

    <Text id="titleTxt"
          text="Titel"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"/>
    <TextField id="titleTxF"
               text=""
               GridPane.columnIndex="1"
               GridPane.columnSpan="3"
               GridPane.rowIndex="0"
               maxWidth="Infinity"/>

    <Text id="descTxt"
          text="Beschreibung"
          GridPane.columnIndex="0"
          GridPane.rowIndex="1"/>
    <TextArea id="descTxF"
              text=""
              prefHeight="100"
              wrapText="true"
              GridPane.columnIndex="1"
              GridPane.columnSpan="3"
              GridPane.rowIndex="1"/>

    <Text id="createdTxt"
          text="Erstellt am"
          GridPane.columnIndex="0"
          GridPane.rowIndex="2"/>
    <TextField id="createdDateTxF"
               editable="false"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
    <TextField id="createdTimeTxF"
               editable="false"
               GridPane.columnIndex="2"
               GridPane.rowIndex="2"/>

    <Text id="questionsTxt"
          text="Fragen"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          GridPane.rowIndex="3"/>
    <Button id="questionsAddBtn"
            text="Frage hinzufügen"
            textFill="green"
            maxWidth="Infinity"
            GridPane.hgrow="SOMETIMES"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"/>
    <Button	id ="pollSaveBtn"
               text="Umfrage speichern"
               textFill="green"
               maxWidth="Infinity"
               GridPane.columnIndex="2"
               GridPane.rowIndex="3"/>

    <Separator id="questionsSep"
               orientation="HORIZONTAL"
               GridPane.columnIndex="0"
               GridPane.rowIndex="4"
               GridPane.columnSpan="4"/>
    <Accordion id="questionsAccordion"
               GridPane.columnIndex="0"
               GridPane.columnSpan="4"
               GridPane.rowIndex="5"/>

    <Text id="stateTxt"
          text="Status"
          GridPane.columnIndex="0"
          GridPane.rowIndex="6"/>
    <ComboBox id="stateCbo"
              disable="true"
              maxWidth="Infinity"
              GridPane.columnIndex="1"
              GridPane.rowIndex="6"
              GridPane.hgrow="ALWAYS"/>
    <Button id="openBtn"
            text="Öffnen"
            textFill="green"
            maxWidth="Infinity"
            GridPane.columnIndex="2"
            GridPane.rowIndex="6"/>
    <Button id="closeBtn"
            text="Schliessen"
            textFill="red"
            maxWidth="Infinity"
            GridPane.columnIndex="2"
            GridPane.rowIndex="6"/>
    <Button id="resultsBtn"
            text="Ergebnisse"
            maxWidth="Infinity"
            GridPane.columnIndex="3"
            GridPane.rowIndex="6"/>

    <TextField id="linkTxt"
               text="link"
               GridPane.columnIndex="0"
               GridPane.columnSpan="4"
               GridPane.rowIndex="7"
               editable="false"
               visible="true"/>
</GridPane>