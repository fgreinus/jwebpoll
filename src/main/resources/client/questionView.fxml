<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane xmlns="http://javafx.com/javafx/8"
          id="rootGrid"
          hgap="25"
          vgap="25"
          style="-fx-border-color: lightgray;">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <GridPane GridPane.rowIndex="0"
              hgap="10"
              vgap="10">

        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints/>
            <ColumnConstraints/>
        </columnConstraints>

        <Text id="titleTxt"
              text="Frage"
              GridPane.columnIndex="0"
              GridPane.rowIndex="0"/>
        <TextField id="titleTxF"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>
        <CheckBox id="requiredCkB"
                  text="Pflichtfrage"
                  GridPane.columnIndex="2"
                  GridPane.rowIndex="0"/>
        <Text id="hintTxt"
              text="Hinweis"
              GridPane.columnIndex="0"
              GridPane.rowIndex="1"/>
        <TextField id="hintTxF"
                   GridPane.columnIndex="1"
                   GridPane.columnSpan="3"
                   GridPane.rowIndex="1"/>
    </GridPane>

    <GridPane GridPane.rowIndex="1"
              hgap="10"
              vgap="10">

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints/>
        </columnConstraints>

        <Text id="answersTxt"
              text="Antwortmöglichkeiten"
              GridPane.columnIndex="0"
              GridPane.rowIndex="0"/>
        <ComboBox
                id="typeCbo"
                GridPane.columnIndex="1"
                GridPane.columnSpan="2"
                GridPane.rowIndex="0"
                prefWidth="210"
                GridPane.halignment="RIGHT"/>
        <Separator id="answersSep"
                   orientation="HORIZONTAL"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="3"
                   GridPane.rowIndex="1"/>

        <Text id="answerAddTextTxt"
              text="Text"
              GridPane.columnIndex="0"
              GridPane.rowIndex="2"/>
        <Text id="answerAddValueTxt"
              text="Wert"
              GridPane.columnIndex="1"
              GridPane.rowIndex="2"/>
        <TextField id="answerAddTextTxF"
                   prefWidth="-Infinity"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="3">
        </TextField>
        <TextField id="answerAddValueTxF"
                   prefWidth="-Infinity"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <Button id="answerAddBtn"
                text="Hinzufügen"
                textFill="green"
                maxWidth="Infinity"
                GridPane.hgrow="SOMETIMES"
                GridPane.columnIndex="2"
                GridPane.rowIndex="3"/>

        <TableView id="answerTable"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="2"
                   GridPane.rowIndex="4"
                   GridPane.vgrow="SOMETIMES"
                   minHeight="150"
                   prefWidth="-Infinity"
                   maxHeight="250">
            <columns>
                <TableColumn id="#controlColumn"/>
                <TableColumn id="#textColumn" text="Text"/>
                <TableColumn id="#valueColumn" text="Wert"/>
            </columns>
        </TableView>
        <Button id="answerRemoveBtn"
                text="Entfernen"
                textFill="red"
                maxWidth="Infinity"
                GridPane.hgrow="SOMETIMES"
                GridPane.columnIndex="2"
                GridPane.rowIndex="4"
                GridPane.valignment="TOP"/>
        <TextArea id="answerFreetext"
                  text="Hier kann Freitext eingegeben werden..."
                  disable="true"
                  GridPane.columnIndex="0"
                  GridPane.columnSpan="3"
                  GridPane.rowIndex="2"
                  GridPane.rowSpan="3"
                  prefHeight="-Infinity"
                  prefWidth="-Infinity"/>
    </GridPane>
</GridPane>